<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>


    <package name="HelloAction" extends="struts-default" namespace="/">
        <!-- 下面的name 的值 必须和页面的名字一样-->
        <action name="hello" class="cn.com.action.HelloAction">
            <!--配置方法的返回值-->
            <result name="ok">/hello.jsp</result>
        </action>
        <!-- 下面的name 的值 必须和页面的名字一样-->
        <action name="index" class="cn.com.action.HelloAction">
            <!--配置方法的返回值-->
            <result name="ok">/index.jsp</result>
        </action>

        <action name="login" class="cn.com.action.LoginAction">
            <!--配置方法的返回值-->
            <result name="success">/success.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

    </package>


</struts>