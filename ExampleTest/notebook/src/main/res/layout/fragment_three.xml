<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   
   <TextView
       android:id="@+id/tv_model_type"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:text="按模板查看"
       android:textColor="@color/black"
       android:textSize="20sp"
       android:gravity="center"
       android:background="@color/white_s"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>
   
   <TextView
       android:id="@+id/tv_time_type"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:text="按时间查看"
       android:textColor="@color/black"
       android:textSize="20sp"
       android:gravity="center"
       android:layout_marginTop="5dp"
       android:background="@color/white_s"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv_model_type"/>

   <TextView
       android:id="@+id/tv_buyer_type"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:text="按购买人查看"
       android:textColor="@color/black"
       android:textSize="20sp"
       android:gravity="center"
       android:layout_marginTop="5dp"
       android:background="@color/white_s"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv_time_type"/>
   

   

   <android.support.v7.widget.RecyclerView
       android:id="@+id/ry_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tv_buyer_type"
       ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>