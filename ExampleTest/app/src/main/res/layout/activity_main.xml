<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

  <Button
      android:id="@+id/btn_animator"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="动画Activty"
      tools:layout_editor_absoluteX="92dp"
      tools:layout_editor_absoluteY="242dp"
      android:visibility="gone"
      />

  <Button
      android:id="@+id/btn_adapter"
      android:layout_width="146dp"
      android:layout_height="48dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="Sample_Activity"
      app:layout_constraintStart_toEndOf="@+id/btn_animator"
      app:layout_constraintTop_toBottomOf="@+id/btn_animator"
      android:visibility="gone"
      />

  <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/grid"
      android:layout_width="132dp"
      android:layout_height="45dp"
      android:layout_gravity="right"
      android:text="Set to Grid"
      app:layout_constraintStart_toStartOf="@+id/btn_adapter"
      app:layout_constraintTop_toBottomOf="@+id/btn_adapter"
      android:visibility="gone"
      />

  <Spinner
      android:id="@+id/spinner"
      android:layout_width="190dp"
      android:layout_height="50dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:dropDownSelector="@color/colorAccent"
      android:spinnerMode="dropdown"
      android:paddingVertical="0dp"
      ></Spinner>

</android.support.constraint.ConstraintLayout>
